<?xml version="1.0" encoding="UTF-8"?>
<project name="module_opsourcesimpleapp" default="compile.module.opsourcesimpleapp">
  <dirname property="module.opsourcesimpleapp.basedir" file="${ant.file.module_opsourcesimpleapp}"/>
  
  <property name="module.jdk.home.opsourcesimpleapp" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.opsourcesimpleapp" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.opsourcesimpleapp" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.opsourcesimpleapp" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="opsourcesimpleapp.output.dir" value="${module.opsourcesimpleapp.basedir}/target/classes"/>
  <property name="opsourcesimpleapp.testoutput.dir" value="${module.opsourcesimpleapp.basedir}/target/test-classes"/>
  
  <path id="opsourcesimpleapp.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="opsourcesimpleapp.module.production.classpath">
    <path refid="${module.jdk.classpath.opsourcesimpleapp}"/>
    <path refid="library.maven:_joda-time:joda-time:2.2.classpath"/>
