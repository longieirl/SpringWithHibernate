<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration debug="false" xmlns:log4j='http://jakarta.apache.org/log4j/'>
     
        
    <appender name="FA" class="org.apache.log4j.AsyncAppender">
        <param name="BufferSize" value="512"/>
        <appender-ref ref="FA_OUTPUT"/>
    </appender>
        
    <appender name="FA_OUTPUT" class="org.apache.log4j.rolling.RollingFileAppender">
        <param name="File" value="logs/OpServer.log"/>
        <param name="Append" value="true"/>
        <rollingPolicy class="org.apache.log4j.rolling.FixedWindowRollingPolicy">
            <param name="FileNamePattern" value="logs/OpServer%i.log"/>
            <param name="maxIndex" value="10"/>
            <param name="minIndex" value="1"/>
        </rollingPolicy>
        <triggeringPolicy class="org.apache.log4j.rolling.SizeBasedTriggeringPolicy">
                        <!-- 10Mb size-->
            <param name="MaxFileSize" value="10485760"/>
        </triggeringPolicy>
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%d{yyyy-MM-dd HH:mm:ss,SSS} %X{user} %p %c: %m%n"/>
        </layout>
    </appender>
        
    <logger name="com.opserver.simpleapp" additivity="false">
        <level value="ERROR"/>
        <appender-ref ref="FA"/>
    </logger>
        
    <root>
        <level value="WARN"/>
        <appender-ref ref="FA"/>
    </root>
     
</log4j:configuration>